#!/usr/bin/env sh

# Add scripts to path
path_prepend "$HOME/.dotfiles_local/bin"

# Update local dotfiles
ldfu() {
    command_exists dfu && dfu &&
    (
        cd ~/.dotfiles_local && git pull --ff-only && ./install.sh -q
    )
}

# Helpful variables
export WINHOME=/mnt/c/Users/bmarkham/
export WINHOMEP=C:/Users/bmarkham/
export NPIPERELAY=$WINHOME/.dotfiles_local/bin/npiperelay.exe
